<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="110dp"
    android:background="#222" >

    <LinearLayout
        android:id="@+id/KarBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:background="#000000"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/KarLogo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-37.5dp"
            android:contentDescription="@string/app_name"
            android:duplicateParentState="true" />

        <TextView
            android:id="@+id/KarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:freezesText="true"
            android:scrollHorizontally="true"
            android:duplicateParentState="true"
            android:paddingLeft="30dp"
            android:text="@string/noName"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/Zakinishi/Documents/GitHub/Alleinfo_Android/Alleinfo_Android/app/src/main/res/layout/elevkar_entry.xml -->